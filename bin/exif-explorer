#!/usr/bin/env ruby
# frozen_string_literal: true

require_relative "../lib/exif-explorer"
require_relative "../lib/exif-explorer/cli/application"
require_relative "../lib/exif-explorer/tui/application"

if ARGV.empty?
  # Launch TUI when no arguments
  ExifExplorer::TUI::Application.new.run
else
  # Launch CLI with arguments
  ExifExplorer::CLI::Application.start(ARGV)
end
